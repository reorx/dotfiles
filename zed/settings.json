// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "soft_wrap": "editor_width",
  "telemetry": {
    "diagnostics": false,
    "metrics": true
  },
  "terminal": {
    "font_size": 14.0
  },
  "collaboration_panel": {
    "button": false
  },
  "git_panel": {
    "button": true
  },
  "outline_panel": {
    "dock": "right",
    "button": true
  },
  "use_system_window_tabs": false,
  "bottom_dock_layout": "contained",
  "preview_tabs": {
    "enable_preview_from_file_finder": true
  },
  "tabs": {
    "file_icons": true,
    "git_status": false
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true
  },
  "title_bar": {
    "show_user_picture": false,
    "show_onboarding_banner": true,
    "show_menus": false,
    "show_sign_in": false,
    "show_project_items": true,
    "show_branch_icon": true
  },
  "debugger": {
    "button": true
  },
  "project_panel": {
    "dock": "right",
    "hide_hidden": true,
    "hide_root": true,
    "indent_guides": {
      "show": "never"
    },
    "show_diagnostics": "errors",
    "git_status": false,
    "folder_icons": true,
    "file_icons": false,
    "default_width": 230.0,
    "button": true
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "buffer_font_weight": 300.0,
  "buffer_font_family": "Hack",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "languages": {
    "Python": {
      "format_on_save": "off"
    }
  },
  "lsp": {
    "basedpyright": {
      // https://docs.basedpyright.com/v1.32.1/configuration/language-server-settings/#based-settings
      "settings": {
        "analysis": {
          "diagnosticMode": "openFilesOnly"
        }
      }
    }
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "inline_code_actions": false,
  "agent": {
    "notify_when_agent_waiting": "all_screens",
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true,
    "model_parameters": [],
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5"
    }
  },
  "buffer_font_size": 15,
  "vim_mode": true
}
